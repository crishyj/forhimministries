@section('after_script')
    <script type="text/javascript">      
        $(function() {
            $('.home_link a').lightBox();          

             $('.carousel').carousel({
                interval: 6000
            });   

            $(".r_carousel > div:gt(0)").hide();
            
            setInterval(function() {
                $('.r_carousel > div:first')
                    .slideDown(500)
                    .slideUp(4000)        
                    .next()      
  
                    .end()
                    .appendTo('.r_carousel');
            }, 5800);
        });
    </script>
@endsection